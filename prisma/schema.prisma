generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  shelves Shelf[]
  books UserBook[]
}

model UserBook {
  userId Int
  user User @relation(fields: [userId], references: [id])
  bookId String
  book Book @relation(fields: [bookId], references: [id])
  @@id([userId, bookId])
  dateAdded DateTime @default(now())
  status String // 'completed', 'reading', 'plan-to-read'
  rating Int? // 1-10 or null
}

model Book {
  id String @id
  title String
  thumbnail String? // url to cover img
  authors String[]
  users UserBook[]
  shelves ShelfBook[]
}

model ShelfBook {
  bookId String
  book Book @relation(fields: [bookId], references: [id])
  shelfId Int
  shelf Shelf @relation(fields: [shelfId], references: [id])
  dateAdded DateTime @default(now()) // Date when this book was addded to this shelf
  @@id([bookId, shelfId])
}

model Shelf {
  id Int @id @default(autoincrement())
  shelfname String @unique
  createdAt DateTime @default(now())
  creatorId Int
  creator User @relation(fields: [creatorId], references: [id])
  books ShelfBook[]
}